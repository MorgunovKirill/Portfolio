extends ../base/layout

block data

block variables
  - var title = "Honey — Главная"
  - var wrapperMod = ""
  - var hasHeader = true
  - var headerMod = ""
  - var hasFooter = true
  - var footerMod = ""
  - var currentPage = "main" //- для остальных страниц пишем либо пустую строку, либо индекс

block main
  main
    h1.visually-hidden Gllacy - мороженое на любой вкус!
    section.schedule
      h2.visually-hidden Расписание работы и контактный телефон
      .schedule__container
        span.schedule__time Принимаем звонки с 10 до 20, ежедневно
        span.schedule__phone +7 000 000 000
    section.intro
      .intro__main-image.intro__main-image--banki
        img(src="img/typeBanki.png" alt="мед в банках" width="386" height="392")
      .intro__main-image.intro__main-image--soty
        img(src="img/typeSoty.png" alt="мед в сотах" width="900" height="740")
      .intro__main-image.intro__main-image--rozliv
        img(src="img/typeRozliv.png" alt="мед на розлив" width="840" height="859")
      h2.intro__heading Мед в сотах
      a.button(href="#") Хочу все!
      .themes
        span.themes__dot.themes__dot--active.jsDot1
        span.themes__dot.jsDot2
        span.themes__dot.jsDot3
    section.features
      article.features__item.features__item--raspberry
        h2.features__heading Малинка даром!
        p.features__description При покупке 2 кг любого фруктового мороженого, добавим в ваш заказ банку малинового варенья бесплатно.
        a.button.features__link(href="#") Подробнее
      article.features__item.features__item--chocolate
        h2.features__heading Шоколадки даром!
        p.features__description При покупке 2 кг пломбира, добавим в ваш заказ упаковку вкуснейшей шоколадной присыпки совершенно бесплатно.
        a.button.features__link(href="#") Подробнее
    section.content
      ul.content__list
        li.content__item.content__item--hit
          .content__image
            img(src="img/soty2.jpg" width="1039" height="763" alt="мед в сотах")
          p.content__info
            span.content__price 310 ₽
            span.content__price-measure /кг
            h3.content__heading Мед в сотах Краснодарский
            a.button(href="#") Быстрый просмотр
        li.content__item.content__item--hit
          .content__image
            img(src="img/soty.jpg" width="540" height="520" alt="мед в сотах")
          p.content__info
            span.content__price 380 ₽
            span.content__price-measure /кг
          h3.content__heading Мед в сотах Ростовский
          a.button(href="#") Быстрый просмотр
        li.content__item.content__item--hit
          .content__image
            img(src="img/vosk.jpg"  width="1000" height="1000" alt="воск")
          p.content__info
            span.content__price 355 ₽
            span.content__price-measure /кг
          h3.content__heading Воск
          a.button(href="#") Быстрый просмотр
        li.content__item.content__item--hit
          .content__image
            img(src="img/s_propolisom.png"  width="370" height="270" alt="Мед с прополисом")
          p.content__info
            span.content__price 415 ₽
            span.content__price-measure /кг
          h3.content__heading Мед с прополисом
          a.button(href="#") Быстрый просмотр
    section.about
      h2.about__heading Магазин Глэйси — это онлайн- и офлайн-магазин по продаже мороженого собственного производства на развес
      ul.about__list
        li.about__item
          p.about__description.about__description--icecream Все наше мороженое изготавливается на собственном производстве, с использованием современного оборудования и проверенных временем технологий.
        li.about__item
          p.about__description.about__description--ingredients Закупка ингредиентов  производится только у проверенных фермерских хозяйств и компаний, с которыми нас связывает долговременное сотрудничество.
        li.about__item
          p.about__description.about__description--leaf Для приготовления мороженого используются настоящие сливки и молоко высочайшего качества. Все дополнительные ингредиенты и добавки произведены из натурального, экологически чистого сырья.
        li.about__item
          p.about__description.about__description--temperature Доставка нашего мороженого до заказчиков осуществляется в специальном термопаке, который не дает мороженому растаять в пути и позволяет сохранить превосходный вкус.
    section.news
      h2.visually-hidden Новости
      article.news__item.news__item--news
        h3.news__heading Новое в нашем блоге
        a.news__link(href="#") 10 способов сервировки фруктовых щербетов к столу
      article.news__item.news__item--subscription
        p.news__description Подпишитесь на нашу сладкую рассылку и будете всегда в курсе всего самого вкусного, что у нас происходит. Обещаем не спамить и не слать всякой ненужной ерунды. Честно =)
        form.news__form(action="#" method="post")
          input(type="email" placeholder="email@example.com")
          button.button(type="submit") Отправить
