include ../../base/mixins

block data

block variables
  - var title = "Escaperoom — Выбор квеста"
  - var wrapperMod = ""
  - var hasHeader = false
  - var headerMod = ""
  - var hasFooter = false
  - var footerMod = ""
  - var currentPage = "" 

doctype html
html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Мёд - оптом и в розницу")

    link(rel="apple-touch-icon" sizes="180x180" href="img2/favicon/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="img2/favicon/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="img2/favicon/favicon-16x16.png")
    link(rel="mask-icon" href="img2/favicon/safari-pinned-tab.svg" color="#ffcf55")
    meta(name="msapplication-TileColor" content="#ffcf55")
    meta(name="theme-color" content="#ffffff")

    link(rel="stylesheet", href="../css/style2.min.css")

  body.allquests
    div(style="display:none")
        include ../../../../build/img2/sprite_auto.svg
    header.page-header.page-header--index.page-header--nojs.page-header--closed
        .page-header__logo
            a(href="escaperoom.html" aria-label="на главную")
        a.page-header__toggle(href="#") Меню
        nav.main-menu
            ul.main-navigation
                li.main-navigation__item
                    a(href="escaperoom-selectQuest.html") Квесты
                li.main-navigation__item
                    a(href="escaperoom-rookie.html") Новичкам
                li.main-navigation__item
                    a(href="escaperoom-reviews.html") Отзывы
                li.main-navigation__item
                    a(href="escaperoom-promo.html") Акции
                li.main-navigation__item
                    a(href="escaperoom-contacts.html") Контакты
            ul.user-navigation
                li.user-navigation__item.user-navigation__item--city
                    a.jsCity(href="#") Новосибирск
                li.user-navigation__item
                    a.jsCity(href="tel:+73832840160") 8 (383) 284 01 60
    main
        section.select
            p квесты в Новосибирске
            h1 Выберите тематику
            ul.select__list
                li.select__item.select__item--active.select__item--allquests
                    a(href="#")
                        +icon("icon-allquests", "26", "30")
                        span Все квесты
                li.select__item.select__item--adventures
                    a(href="#")
                        +icon("icon-adventures", "36", "30")
                        span Приключения
                li.select__item.select__item--horror
                    a(href="#")
                        +icon("icon-horror", "30", "30")
                        span Ужасы
                li.select__item.select__item--mysticism
                    a(href="#")
                        +icon("icon-mysticism", "30", "30")
                        span Мистика
                li.select__item.select__item--detective
                    a(href="#")
                        +icon("icon-detective", "40", "30")
                        span Детектив
                li.select__item.select__item--sci-fi
                    a(href="#")
                        +icon("icon-sci-fi", "28", "30")
                        span Sci-fi
            ul.gallery
                li.gallery__item.gallery__item--hit.gallery__item--available
                    a(href="escaperoom-maniack.html")
                        img(src="../img2/maniack-list.jpg" alt="Маньяк")
                        h3 Маньяк
                        p Верхнетецкая, 32
                        div
                            .gallery__quantity
                                span 3–6 чел
                            .gallery__dificulty
                                span средний                
                li.gallery__item.gallery__item--available
                    a(href="escaperoom-ritual.html")
                        img(src="../img2/ritual-list.jpg" alt="Ритуал")
                        h3 Ритуал
                        p пр. Ленина, 37
                        div
                            .gallery__quantity
                                span 3–5 чел
                            .gallery__dificulty
                                span сложный               
                li.gallery__item.gallery__item--mansion.gallery__item--available
                    a(href="escaperoom-mansion.html")
                        img(src="../img2/mansion-list.jpg" alt="Тайны старого особняка")
                        h3 Тайны старого особняка
                        p пр. Ленина, 37
                        div
                            .gallery__quantity
                                span 2-5 чел
                            .gallery__dificulty
                                span легкий
                li.gallery__item.gallery__item--experiment.gallery__item--hit.gallery__item--available
                    a(href="escaperoom-experiment.html")
                        img(src="../img2/experiment.jpg" alt="Фатальный эксперимент")
                        h3 Фатальный эксперимент
                        p Верхнетецкая, 32
                        div
                            .gallery__quantity
                                span 5-8 чел
                            .gallery__dificulty
                                span сложный
                li.gallery__item.gallery__item--hit
                    a(href="#")
                        img(src="../img2/crypt-list.jpg" alt="Склеп")
                        h3 Склеп
                        p пр. Ленина, 37
                        div
                            .gallery__quantity
                                span 2–5 чел
                            .gallery__dificulty
                                span сложный               
                li.gallery__item.gallery__item--cabin.gallery__item--hit
                    a(href="#")
                        img(src="../img2/cabin-list.jpg" alt="Хижина в лесу")
                        h3 Хижина в лесу
                        p Верхнетецкая, 32
                        div
                            .gallery__quantity
                                span 4-7 чел
                            .gallery__dificulty
                                span средний            
                li.gallery__item
                    a(href="#")
                        img(src="../img2/ghosts-list.jpg" alt="История призраков")
                        h3 История призраков
                        p Новослободская, 2а
                        div
                            .gallery__quantity
                                span 5-6 чел
                            .gallery__dificulty
                                span легкий
                li.gallery__item
                    a(href="#")
                        img(src="../img2/metro-list.jpg" alt="Метро 2033")
                        h3 Метро 2033
                        p Новослободская, 2а
                        div
                            .gallery__quantity
                                span 6-8 чел
                            .gallery__dificulty
                                span средний
                li.gallery__item
                    a(href="#")
                        img(src="../img2/attic-list.jpg" alt="Старый чердак")
                        h3 Старый чердак
                        p Новослободская, 2а
                        div
                            .gallery__quantity
                                span 2-3 чел
                            .gallery__dificulty
                                span легкий
                li.gallery__item.gallery__item--boundary
                    a(href="#")
                        img(class="boundary" src="../img2/boundary-list.jpg" alt="Последний рубеж")
                        h3 Последний рубеж
                        p Верхнетецкая, 32
                        div
                            .gallery__quantity
                                span 4-7 чел
                            .gallery__dificulty
                                span средний
                li.gallery__item
                    a(href="#")
                        img(src="../img2/mars-list.jpg" alt="Марс-2056")
                        h3 Марс-2056
                        p пр. Ленина, 37
                        div
                            .gallery__quantity
                                span 2-4 чел
                            .gallery__dificulty
                                span легкий
    footer.page-footer
      ul.socials
        li.socials__item.socials__item--instagram
            a(href="#")
        li.socials__item.socials__item--vk
            a(href="#")
      a.page-footer__question.jsQuestion(href="#") Задать вопрос

    block modals
        .overlay 
        .overlay-menu
        .modal.modal--city
            button.modal__close(aria-label="закрыть")
                +icon('icon-close', 16, 16)
            h2 Ваш город
            a.location(href="#")
                span Определить местоположение
            p ... или выберите вручную
            ul.modal__list
                li.modal__list-item.modal__list-item--active
                    a(href="#") Новосибирск 
                li.modal__list-item
                    a(href="#") Иркутск 
                li.modal__list-item
                    a(href="#") Смоленск 
                li.modal__list-item
                    a(href="#") Волгоград 
                li.modal__list-item
                    a(href="#") Комсомольск-на-Амуре 
        .modal.modal--question 
            button.modal__close(aria-label="закрыть")
                +icon('icon-close', 16, 16)  
            h2 Задайте вопрос
            form(action="#" method="POST")  
                .wrapper 
                    label
                        | Чтобы мы смогли обращаться к вам, оставьте ваше имя
                        span.input-title Имя
                        input(type="text" name="user-name" id="user-name" placeholder="Имя")
                    label
                        | Чтобы мы смогли обращаться к вам, оставьте ваше имя
                        span.input-title E-mail
                        input(type="text" name="user-email" id="user-email" placeholder="E-mail")
                        span.error-message Введён некорректный e-mail, попробуйте заново
                    label(for="user-question") Ваш вопрос:
                    textarea#user-question(name="user-question" cols="30" rows="4" placeholder="Начните вводить ...")
                    button.button(type="submit") Отправить вопрос
                input#agreement(type="checkbox")
                label.agreement(for="agreement")
                    | Я согласен с 
                    a(href="#") правилами обработки персональных данных
                    | и пользовательским соглашением

    script(src="../js/vendor.min.js")
    script(src="../js/escaperoom.min.js")
